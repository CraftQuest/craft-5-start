{% extends  '_shared/_layout' %}
{% block main %}
{% set testimonials = craft.entries.section('testimonials').orderBy('RAND()').limit(2).all() %}
<main>
    <div>
        <div class="relative">
            <div class="max-w-full">
                <div class="relative sm:overflow-hidden">
                    <div class="absolute inset-0">
                        <img
                                class="h-full w-full object-cover"
                                src="{{ entry.heroImage.one().url() }}"
                                alt="{{ entry.headline }}"
                        />
                        <div
                                class="absolute inset-0 bg-gray-300 mix-blend-multiply"
                        ></div>
                    </div>
                    <div
                            class="relative px-4 py-16 sm:px-6 sm:py-24 lg:py-32 lg:px-8"
                    >
                        <h1
                                class="text-center text-5xl font-extrabold tracking-tight md:5xl sm:text-7xl lg:text-7xl"
                        >
                            {% for words in entry.headline | split(' ') | batch(4) %}
                            <span class="block text-white">{{ words | join(' ') }}</span>
                            {% endfor %}
                        </h1>
                        <p
                                class="mt-6 max-w-lg mx-auto text-center text-xl text-white sm:max-w-3xl"
                        >
                            {{ entry.tagline }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-white">
        <div
                class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8"
        >
            <div class="pb-5">
                <h2 class="text-4xl leading-8 font-extrabold text-primary">
                    Trail Running Adventures
                </h2>
                <p class="mt-2 max-w-4xl text-md text-gray-900">
                    Choose your own trail adventure from locations across North
                    America. Lace up and breathe in the fresh air. Welcome outside
                    with TrailQuest.
                </p>
            </div>
            {% set adventures = craft.entries.section('adventures').limit(10).all() %}
            <div
                    class="grid grid-cols-1 gap-y-10 sm:grid-cols-2 gap-x-6 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8"
            >
                {% for adventure in adventures %}
                <a href="{{ adventure.url }}" class="group">
                    <div
                            class="w-full aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden xl:aspect-w-8 xl:aspect-h-8"
                    >
                        <img
                                src="{{ adventure.images.one().url() }}"
                                alt="{{ adventure.title }}"
                                class="w-full h-full object-center object-cover group-hover:opacity-75"
                        />
                    </div>
                    <h3 class="mt-4 text-lg font-bold text-gray-900">
                        {{ adventure.title }}
                    </h3>
                    <p class="mt-1 text-md font-medium text-gray-900">
                       {{ adventure.shortDescription }}
                    </p>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
    <section class="overflow-hidden md:py-20 lg:py-20 bg-white">
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative">
                <blockquote class="">
                    <div
                            class="max-w-3xl mx-auto text-center text-4xl leading-9 font-bold text-secondary"
                    >
                        <p>
                            &ldquo;{{ testimonials[0].testimonial }}&rdquo;
                        </p>
                    </div>
                    <footer class="mt-8">
                        <div class="md:flex md:items-center md:justify-center">
                            <div
                                    class="mt-3 text-center md:mt-0 md:ml-4 md:flex md:items-center"
                            >
                                <div class="text-base font-medium text-gray-900">
                                    {{ testimonials[0].title }} &nbsp;
                                </div>
                                <div class="text-base font-medium text-gray-500">
                                    {{ testimonials[0].location }}
                                </div>
                            </div>
                        </div>
                    </footer>
                </blockquote>
            </div>
        </div>
    </section>
    <section class="bg-white">
        <div
                class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8"
        >
            <div class="pb-5">
                <h2 class="text-4xl leading-8 font-extrabold text-primary my-6">
                    Trail Running Locations
                </h2>
            </div>
            <div
                    class="grid grid-cols-1 gap-y-10 sm:grid-cols-2 gap-x-6 lg:grid-cols- xl:grid-cols-4 xl:gap-x-6"
            >
                {% set locations = craft.entries.section('locations').all() %}
                {% for locationsSet in locations | batch(4) %}
                <ul>
                    {% for location in locationsSet %}
                    <li class="pb-2">
                        <a class="hover:text-secondary text-black underline" href="{{ location.url() }}"
                        >{{ location.title }}</a
                        >
                    </li>
                    {% endfor %}
                </ul>
                {% endfor %}
            </div>
        </div>
    </section>
    <section class="overflow-hidden md:py-20 lg:py-20 bg-white">
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative">
                <blockquote class="">
                    <div
                            class="max-w-3xl mx-auto text-center text-4xl leading-9 font-bold text-secondary"
                    >
                        <p>
                            &ldquo;{{ testimonials[1].testimonial }}&rdquo;
                        </p>
                    </div>
                    <footer class="my-8">
                        <div class="md:flex md:items-center md:justify-center">
                            <div
                                    class="mt-3 text-center md:mt-0 md:ml-4 md:flex md:items-center"
                            >
                                <div class="text-base font-medium text-gray-900">
                                    {{ testimonials[1].title }} &nbsp;
                                </div>
                                <div class="text-base font-medium text-gray-500">
                                    {{ testimonials[1].location }}
                                </div>
                            </div>
                        </div>
                    </footer>
                </blockquote>
            </div>
        </div>
    </section>
</main>
{% endblock %}